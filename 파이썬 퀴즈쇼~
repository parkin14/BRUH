def clickA():
    def clickO():
        if a==1:
            lblA=Label(win,text='틀림',relief='solid',width=80)
            lblA.grid(row=2,column=0)
        elif a==2:
            lblA=Label(win,text='맞음',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
        elif a==3:
            lblA=Label(win,text='설마 X라고 했겠어',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
        elif a==4:
            lblA=Label(win,text='틀림',relief='solid',width=80)
            lblA.grid(row=2,column=0)
        elif a==5:
            lblA=Label(win,text='현재 진행중',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
    def clickX():
        if a==1:
            lblA=Label(win,text='맞음',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
        elif a==2:
            lblA=Label(win,text='틀림',relief='solid',width=80)
            lblA.grid(row=2,column=0)
        elif a==3:
            lblA=Label(win,text='학원 때려ㅊ..',relief='solid',width=80)
            lblA.grid(row=2,column=0)
        elif a==4:
            lblA=Label(win,text='맞음',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
        elif a==5:
            lblA=Label(win,text='현재 진행중',relief='solid',width=80)
            lblA.grid(row=2,column=0)
            btnA.grid(row=2,column=1)
    win=Tk()
    win.title('OX 퀴즈쇼')
    a=randint(1,5)
    if a==1:
        k="'def'는 어떤 값을 저장하기 위한 변수의 이름이다"
    elif a==2:
        k="python에서 게임을 만들때 pygame이 아닌 tkinter라는 모듈을 사용할수있다"
    elif a==3:
        k="영통동에서 가장 잘나가는 코딩학원은 '씨큐브코딩'이다"
    elif a==4:
        k="아두이노를 쓸때 S4A라는 앱을통해 텍스트 코딩으로 연결된 모듈을 조작할 수 있다"
    elif a==5:
        k="박재혁은 현재 아무도 모르게 비밀 프로젝트를 진행중이다"
    lblQ=Label(win,text = k,relief='solid',width=80)
    lblQ.grid(row=0,column=0)
    btnO=Button(win,text='O',command=clickO,width=40)
    btnO.grid(row=1,column=0)
    btnX=Button(win,text='X',command=clickX,width=40)
    btnX.grid(row=1,column=1)
    btnA=Button(win,text='another',command=clickA,width=20)
    win.update()
#절취선
win=Tk()
win.title('OX 퀴즈쇼')
a=randint(1,5)
if a==1:
    k="'def'는 어떤 값을 저장하기 위한 변수의 이름이다"
elif a==2:
    k="python에서 게임을 만들때 pygame이 아닌 tkinter라는 모듈을 사용할수있다"
elif a==3:
    k="영통동에서 가장 잘나가는 코딩학원은 '씨큐브코딩'이다"
elif a==4:
    k="아두이노를 쓸때 S4A라는 앱을통해 텍스트 코딩으로 연결된 모듈을 조작할 수 있다"
elif a==5:
    k="박재혁은 현재 아무도 모르게 비밀 프로젝트를 진행중이다"
lblQ=Label(win,text = k,relief='solid',width=80)
lblQ.grid(row=0,column=0)
btnO=Button(win,text='O',command=clickO,width=40)
btnO.grid(row=1,column=0)
btnX=Button(win,text='X',command=clickX,width=40)
btnX.grid(row=1,column=1)
btnA=Button(win,text='another',command=clickA,width=20)
win.update()
