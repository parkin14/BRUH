import math
def rect(w, h):
    return w*h
def tri(w, h):
    return w*h/2
def circle(r):
    return round(r ** 2 * math.pi)
print("Choose a shape: ")
print("1. Rectangle","2. Triangle","3. Circle", sep='\n')
n=int(input( ))

if n==1:
    w=int(input("가로길이 : "))
    h=int(input("세로길이 : "))
    area=rect(w,h)
elif n==2:
    w=int(input("가로길이 : "))
    h=int(input("세로길이 : "))
    area=tri(w,h)
elif n==3:
    r=int(input("반지름의 길이 : "))
    area=circle(r)
print(round(area))
